<section class="custom-product-grid">
  <div class="grid grid-{{ section.settings.grid_columns }}">
    {% paginate collections.all.products by section.settings.products_limit %}
      {% for product in collections.all.products %}
        <div class="product-card">
          <a href="{{ product.url }}">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.title }}"
                width="600"
                height="{{ 600 | divided_by: product.featured_image.aspect_ratio | round }}"
                loading="lazy"
              >
            {% endif %}
            <h3 style="color: {{ section.settings.product_title_color }}">{{ product.title }}</h3>
            <p style="color: {{ section.settings.price_color }}">{{ product.price | money }}</p>
          </a>
          <a href="{{ product.url }}" class="btn-view-details">View Details</a>
        </div>
      {% endfor %}
    {% endpaginate %}
  </div>
</section>

<style>
      .custom-product-grid {
        padding: 40px 20px;
      }
      .custom-product-grid .grid {
        display: grid;
        gap: 20px;
      }
      .custom-product-grid .grid-2 { grid-template-columns: repeat(2, 1fr); }
      .custom-product-grid .grid-3 { grid-template-columns: repeat(3, 1fr); }
      .custom-product-grid .grid-4 { grid-template-columns: repeat(4, 1fr); }
      .product-card {
        text-align: center;
      }
      .product-card img {
      width: 100%;
      height: auto; /* let image scale naturally */
      aspect-ratio: 1/1; /* optional: force square thumbnails */
      object-fit: cover; /* prevent stretch, crop instead */
      border-radius: 8px;
    }

      .product-card h3 {
        margin-top: 10px;
        font-size: 18px;
      }
      .product-card p {
        font-size: 16px;
        font-weight: bold;
      }


    .btn-view-details {
    display: inline-block;
    margin-top: 8px;
    padding: 8px 14px;
    background-color: #007BFF; /* blue */
    color: #fff;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    transition: background 0.3s ease;
  }

  .btn-view-details:hover {
    background-color: #0056b3; /* darker blue */
  }
</style>

{% schema %}
{
  "name": "Product Grid",
  "settings": [
    {
      "type": "range",
      "id": "products_limit",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Number of products",
      "default": 6
    },
    {
      "type": "select",
      "id": "grid_columns",
      "label": "Grid Columns",
      "default": "3",
      "options": [
        { "value": "2", "label": "2 Columns" },
        { "value": "3", "label": "3 Columns" },
        { "value": "4", "label": "4 Columns" }
      ]
    },
    { "type": "color", "id": "product_title_color", "label": "Product Title Color", "default": "#000000" },
    { "type": "color", "id": "price_color", "label": "Price Color", "default": "#FF0000" }
  ],
  "presets": [{ "name": "Custom Product Grid (All Products)" }]
}
{% endschema %}
